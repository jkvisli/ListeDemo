<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/kommune_card_view"
    android:layout_width="match_parent"                  android:layout_height="wrap_content"
    android:layout_gravity="center"                      android:layout_margin="8dp"
    card_view:cardCornerRadius="10dp"                    card_view:cardElevation="10dp"
    card_view:cardBackgroundColor="#FFFFFF"   >
    <RelativeLayout
        android:layout_width="match_parent"              android:layout_height="wrap_content"
        android:paddingVertical="6dp" >
        <ImageView
            android:id="@+id/kommmuneVaapen"             android:src="@drawable/riksvaapen"
            android:layout_width="40dp"                  android:layout_height="wrap_content"
            android:layout_alignParentTop="true"         android:layout_alignParentStart="true"
            android:paddingHorizontal="5dp"              android:adjustViewBounds="true"    />
        <TextView
            android:id="@+id/txtKommuneNavn"             android:text="Kommunennavn"
            android:layout_alignParentTop="true"         android:layout_toRightOf="@id/kommmuneVaapen"
            android:layout_width="wrap_content"          android:layout_height="wrap_content"
            android:paddingHorizontal="5dp"              style="@style/kommune_navn"  />
        <TextView
            android:id="@+id/txtKommunenr"               android:text="KNr"
            android:layout_below="@+id/txtKommuneNavn"   android:layout_toRightOf="@id/kommmuneVaapen"
            android:layout_width="wrap_content"          android:layout_height="wrap_content"
            android:paddingHorizontal="10dp"             android:textSize="16sp"  />
        <TextView
            android:id="@+id/txtFolketall"               android:text="Folketall"
            android:layout_below="@+id/txtKommuneNavn"   android:layout_toEndOf="@id/txtKommunenr"
            android:layout_width="wrap_content"          android:layout_height="wrap_content"
            android:paddingHorizontal="5dp"              android:textSize="16sp" />
        <TextView
            android:id="@+id/txtFylke"                   android:text="Fylke"
            android:layout_width="wrap_content"          android:layout_height="wrap_content"
            android:layout_below="@+id/txtKommuneNavn"   android:layout_alignParentEnd="true"
            android:paddingHorizontal="5dp"              android:textSize="16sp"  />
    </RelativeLayout>
</androidx.cardview.widget.CardView>

